<?xml version="1.0" encoding="UTF-8"?>
<Configuration name="ScalaOtus" status="error">
<Appenders>
    <Console name="Console">
        <PatternLayout>
            <Pattern>%d [%X{correlationId}] %5p %c{1} %X %F:%L - %m%n</Pattern>
        </PatternLayout>
    </Console>
</Appenders>
<Loggers>
    <Root level="TRACE">
        <AppenderRef ref="Console"/>
    </Root>
</Loggers>
</Configuration>